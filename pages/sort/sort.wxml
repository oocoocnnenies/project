<view class="title-1">热门话题</view>
<block wx:for="{{posts}}">
    <view class="container">
        <l-card class="container" type="primary" 
                l-img-class="right-card" 
                position="left" 
                image="{{item.imgSrc}}"
                title="{{item.title}}">
            <view class="content">
                {{item.postsContent}}
            </view>
        </l-card>
    </view>
    <view class="container">
        <l-card  type="primary" 
                l-img-class="right-card" 
                position="left" 
                image="{{item.imgSrc1}}"
            title="{{item.title1}}">
                <view class="content">
                    {{item.postsContent1}}
                </view>
        </l-card>
    </view>
</block>

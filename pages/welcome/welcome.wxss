
 page{
    background-color:whitesmoke;
  }
  .wrapper {
    width: 100%;
    height: 640rpx;
    background-color: #e71313;
    position: absolute;
  }
  .into {
    height: 500rpx;
    position: relative;
    top: 430rpx;
  }
  #owl-login {
    width: 500rpx;
    height: 200rpx;
    position: absolute;
    top: -182rpx;
    left: 50%;
    margin-left: -200rpx;
  }
  
  .head {
    width: 400rpx;
    height: 200rpx;
  }
  .hand {
    width: 68rpx;
    height: 68rpx;
    border-radius: 80rpx;
    background-color: #472d20;
    transform: scaleY(0.6);
    transition: 0.3s ease-out;
    position: absolute;
    left: 25rpx;
    bottom: -16rpx;
  }
  .hand-r {
    left: 315rpx;
  }
  .control-group {
    width: 650rpx;
    height: 500rpx;
    margin: 0 auto;
    padding: 20rpx;
    background-color: white;
    border-radius: 10rpx;
    box-shadow: 0px 1px 3px rgba(0, 0, 0, 0.1);
   }
  .control {
    width: 650rpx;
    height: 300rpx;
    margin: 20rpx auto;
    border: 1px solid #f1f1f1;
    border-radius: 10rpx; 
  }
  .control-1{
    margin: 20px auto;
    font-size: 24px;
    color: rgb(86, 90, 92);
    font-weight: bold;
    text-align: center;
  }
  .control-2{
    margin-top: -5px;
